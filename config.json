{
    "site": {
        "name": "openQ",
        "description": "开放 包容 多走些路  本博客界面风格重定义中",
        "url": "http://localhost:8000/openq/"
    },

    "author": {
        "name": "山姆是个好蜀黍",
        "email": "smart.wolfer@gmail.com",
        "twitter": "hl13571"
    },

    "config": {
        "source": "posts",
        "static_source": "static",
        "output": "deploy",
        "static_output": "deploy/static",
        "static_prefix": "/static/",
        "analytics": ""
    },

    "permalink": {
        "page": "/page/{page}/",
        "post": "/{filename}/",
        "tag": "/tag/{name}/",
        "tags": "/tag/index.html",
        "archive": "/archive/{year}/",
        "archives": "/archive/index.html",
        "feed": "/feed.xml"
    },

    "comment": {
        "allow": true,
        "system": "disqus",
        "shortname": "openq"
    },

    "deploy": {
        "default": "git",
        "git": {
            "repo": "git@github.com:hl85/hl85.github.io.git",
            "branch": "master",
            "delete": true
        },

        "rsync": {
            "ssh_port": 22,
            "ssh_user": "username",
            "ssh_host": "123.45.6.78",
            "document_root": "~/website.com/",
            "delete": true
        }
    },

    "theme": {
        "name": "puresam",
        "vars": {
            "github": "hl85",
            "links": [
                {
                    "name": "openQ",
                    "url": "http://openq.cn",
                    "description": "That's Nice!"
                }
            ]
        }
    }
}
